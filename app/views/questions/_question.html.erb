<div class="question row">
<a class="question-partial" href="<%= root_url + 'questions/' + question.id.to_s %>">
<div class="col-md-12 question-box">
<h3><%= question.title %></h3>
    <p>
    <!--<%= Comment.where(:question_id => question.id).count.to_s + ' comments' %></br> _-->
    <%= count_comments_in_question(question).to_s + ' comments' %></br>
    <%= distance_of_time_in_words(question.created_at, Time.now, include_seconds: true) + " ago" %></p>
<% if session[:current_user] != nil %>
        <% if User.find(session[:current_user]).is_admin %>
            <%= link_to '[delete]', root_url + 'questions/' + question.id.to_s + '/delete' %>
        <% end %>
    <% end %>
</div>
</a>
</div>


<script>
  $(document).ready(new function(){
    $('.question-box').hover(
      
      function() {
      $(this).css('background', 'black');
      $(this).children().css('color', 'white');
      $(this).children().children().css('color', 'white');
    }, 
    
      function(){
        $(this).css('background', 'white');
        $(this).children().css('color', 'black');
        $(this).children().children().css('color', 'black');
    });
  });
</script>
<div class="question row">
<div class="col-md-12">
<h3><%= link_to question.title, root_url + 'questions/' + question.id.to_s %></h3>
    <p>
    <!--<%= Comment.where(:question_id => question.id).count.to_s + ' comments' %></br> _-->
    <%= count_comments_in_question(question).to_s + ' comments' %></br>
    <%= distance_of_time_in_words(question.created_at, Time.now, include_seconds: true) + " ago" %></p>
<% if session[:current_user] != nil %>
        <% if User.find(session[:current_user]).is_admin %>
            <%= link_to '[delete]', root_url + 'questions/' + question.id.to_s + '/delete' %>
        <% end %>
    <% end %>
</div>
</div>
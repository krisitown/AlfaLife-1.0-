<div id="chat-wrapper">
    <div id="chat-box">
        Change this text
    </div>

    <div id="sender" onkeypress="sendMessage(event)">
        <input type="text" id="send-box" placeholder="Send message" /> 
    </div>
</div>

<script type='text/javascript'>
    function getMessage(message) {
        $('#chat-box').html($('#chat-box').html() + "</br>" + message);
    }

    function sendMessage(e) {
        if (e.which == 13 || e.keyCode == 13) {
            var message = document.getElementById('send-box').value;
            getMessage(message);
            document.getElementById('send-box').value == "";
        }
    }
</script>
<div class="row">
    <img class="col-md-2" src="<%= article.thumbnail %>" >
    <a class="col-md-8" href="<%= root_url + "articles/" + article.id.to_s %>"<h4><%= article.title %></a>
    <% if session[:current_user] != nil %>
        <% if User.find(session[:current_user]).is_admin %>
            <%= link_to '[delete]', root_url + 'articles/' + article.id.to_s + '/delete' %>
        <% end %>
    <% end %>
</div>
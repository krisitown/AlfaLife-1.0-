<div class="article">
<div class="container">
<div class="row">
    <img class="article-thumb col-md-3 img-responsive" src="<%= article.thumbnail %>" >
    <a class="article-name col-md-6" href="<%= root_url + "articles/" + article.id.to_s %>"<h4><%= article.title %></a>
    <div class="article-teaser row">
        <div class="article_teaser_div col-md-6">
        <p>
            <% if article.content != nil %>
                <% endOfPara = article.content[4..144].index('<') %>
                <% if endOfPara == nil %>
                    <%= article.content[3..140].html_safe + "..." %>
                <% else %>
                    <%= article.content[3..endOfPara].html_safe %>
                <% end %>
                <a href="<%= root_url + "articles/" + article.id.to_s %>">Read more</a>
            <% end %>
        </p>
        </div>
    </div>
    <% if session[:current_user] != nil %>
        <% if User.find(session[:current_user]).is_admin %>
            <%= link_to '[delete]', root_url + 'articles/' + article.id.to_s + '/delete' %>
        <% end %>
    <% end %>
</div>
</div>
</div>
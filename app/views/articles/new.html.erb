<h2>Create an article</h2>

<%= form_for @article do |f| %>
    <%= f.label :title %></br>
    <%= f.text_field :title %></br>

    <%= f.label :thumbnail %></br>
    <%= f.text_field :thumbnail %></br>

    <%= f.label :content %></br>
    <%= f.text_area :content %></br>

    <input type="hidden" id="user_id" value="<%= session[:current_user] %>">

    <%= f.submit 'Submit' %>
<% end %>